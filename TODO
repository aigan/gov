http://www.w3.org/TR/vocab-org/


$pp name "Piratpartiet";
    hasMember $jl.
$jl_in_pp member $jl;
          organization $pp;
          memberDuring ...;
          role $admin_role.
$admin_role a Role;
            label "admin";
            roleProperty $admin_of;  ### Setting up for inference
$admin_of a rdf:Property;
          label "admin_of";
           rdfs:subPropertyOf org:memberOf.

$jl $admin_of $pp.

--

 { [] org:member ?a; org:organization ?o; org:role [org:roleProperty ?r] } -> {?a ?r ?o}

$jl_in_pp member $jl;
          organization $pp;
          role { rolePproperty $admin_of }
-->
$jl $admin_of $pp.




<http://example.com/org#id> a org:FormalOrganization;
    skos:prefLabel "Example Ltd".

eg:ctoRole a org:Role;
    skos:prefLabel "CTO".
        
[] a org:Membership;
    org:member <http://example.com/people#jo>;
    org:organization <http://example.com/org#id>;
    org:role eg:ctoRole;
    org:memberDuring [a time:Interval; time:hasBeginning [
                      time:inXSDDateTime "2009-11-01T09:00:00Z"^^xsd:dateTime]].

eg:ctoRole a org:Role;
    org:roleProperty eg:ctoOf.
    
eg:ctoOf a owl:ObjectProperty, rdf:Property;
    skos:prefLabel "CTO";
    rdfs:subPropertyOf org:memberOf.
        
